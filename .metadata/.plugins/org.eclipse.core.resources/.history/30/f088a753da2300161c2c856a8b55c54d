from tkinter import *
import Tour

class TourGui():
    
    def __init__(self):
        
        # Starts GUI
        root = Tk()
        root.wm_title('Tour')
        
        # Top Frame
        topFrame = Frame(root, pady = 20, padx = 20)
        orLabel = Label(topFrame, text = 'Origin')
        orLabel.pack()
        orEntry = Entry(topFrame, width = 28, relief = SUNKEN, borderwidth = 3)
        orEntry.pack()
        desLabel = Label(topFrame, text = 'Destination')
        desLabel.pack()
        desEntry = Entry(topFrame, width = 28, relief = SUNKEN, borderwidth = 3)
        desEntry.pack()
        mdLabel = Label(topFrame, text = 'Mode').pack()
        mdEntry = Entry(topFrame, width = 28, relief = SUNKEN, borderwidth = 3).pack()
        topFrame.pack()
        
        # Bottom Frame
        botFrame = Frame(root, pady = 20, padx = 20)
        distLabel = Label(botFrame, text = 'Distance (m)').pack()
        distEntry = Entry(botFrame, width = 28, relief = SUNKEN, borderwidth = 3).pack()
        distButton = Button(botFrame, relief = RAISED, width = 14, text = 'Get Distance', command = self.onClick).pack()
        botFrame.pack()
            
    def onClick(self):
        
        print (type(self.val))

        #print (self.orEntry.get())
            
TourGui()