from tkinter import *

class TourGui():
    
    def __init__(self):
        
        # Initiates GUI
        root = Tk()
        root.wm_title('Tour')
        root.configure(background = 'white')
        
        # Top Frame
        topFrame = Frame(root)
        
        # Origin
        orFrame = Frame(topFrame)
        orLabel = Label(orFrame, Text = 'Origin')
        orEntry = Entry(orFrame, width = 41, relief = SUNKEN, borderwidth = 3)
        
        # Destination
        desFr = Frame(topFrame)
        orLabel = Label(originFr, Text = 'Origin')
        orEntry = Entry(originFr, width = 41, relief = SUNKEN, borderwidth = 3)
        
        # Mode
        originFr = Frame(topFrame)
        orLabel = Label(originFr, Text = 'Origin')
        orEntry = Entry(originFr, width = 41, relief = SUNKEN, borderwidth = 3)
        
        # Bottom Frame
        botFrame = Frame(root)