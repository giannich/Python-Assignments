        self.md = mode
        # Implement Function
        
        ct1List = self.ct1.split()
        ct2List = self.ct2.split()
        
        for i in ct1List:
            print (i)
        
        queryHTML = 'http://maps.googleapis.com/maps/api/distancematrix/json?'
        queryHTML += 'origins='
        
        
        
instance = Tour('Los Angeles, CA', 'San Francisco, CA')
